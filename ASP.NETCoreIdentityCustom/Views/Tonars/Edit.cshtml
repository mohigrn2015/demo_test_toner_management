@model ASP.NETCoreIdentityCustom.Models.Toner

@{
   ViewData["Title"] = "Edit";
   Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<div class="app-content content ">
   <div class="content-overlay"></div>
   <div class="header-navbar-shadow">
         <div style="display: flex; justify-content: center; align-items: center;">
         <img src="~/app-assets/images/banner/photo_kk.png" alt="" srcset="" style=" display: block; margin-left: auto; margin-right: auto; width: 20%;" />
        </div>
   </div>
   <div class="content-wrapper container-xxl p-0">
      <div class="col-md-6 offset-3 col-6">
        <div class="card">
          <div class="card-header">
           <h4 class="card-title">Toner Infromation</h4>
          </div>
          <div class="card-body">
            <form class="form form-vertical" asp-action="Edit">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <input type="hidden" asp-for="TonarId" />
              <div class="row">
                 <div class="col-12">
                    <div class="mb-1">                           
                      <label class="form-label" for="first-name-icon">Toner Model</label>
                       <div class="input-group input-group-merge">
                          <input asp-for="TonarModel" class="form-control" />
                        <span asp-validation-for="TonarModel" class="text-danger"></span>
                       </div>
                    </div>
                 </div>
                  <div class="col-12">
                 <div class="mb-1">
                   <label class="form-label" for="email-id-icon">Type</label>
                   <div class="input-group input-group-merge">
                    <select asp-for="Type" required class="form-control">
                      <option value="" >Choose Color</option>
                      <option value="false" >Black & White</option>
                      <option value="true" >Color</option>
                    </select>
                    <span asp-validation-for="TonarModel" class="text-danger"></span>
                   </div>
                 </div>
               </div>
                 <div class="col-12">
                   <div class="mb-1">
                     <label class="form-label" for="email-id-icon">Description</label>
                     <div class="input-group input-group-merge">
                       <textarea asp-for="Description" class="form-control" ></textarea>
                       <span asp-validation-for="Description" class="text-danger"></span>
                     </div>
                    </div>
                 </div>   
                <div class="col-12">
                  <input type="submit" value="Update" class="btn btn-success" />
                  <a asp-action="Index"class="btn btn-secondary">Back</a>
                </div>
              </div>
            </form>
          </div>
         </div>
      </div>
   </div>
</div>
