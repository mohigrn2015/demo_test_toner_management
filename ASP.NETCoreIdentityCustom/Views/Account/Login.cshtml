<body class="vertical-layout vertical-menu-modern blank-page navbar-floating footer-static  " data-open="click" data-menu="vertical-menu-modern" data-col="blank-page">
   <!-- BEGIN: Content-->
   <div class="app-content content ">
      <div class="content-overlay"></div>
      <div class="header-navbar-shadow"></div>
      <div class="content-wrapper">
         <div class="content-header row">
         </div>
         <div class="content-body">
            <div class="auth-wrapper auth-cover">
               <div class="auth-inner row m-0 ">
                  <a class="brand-logo" >

                    <h1 class="brand-text text-center text-primary ms-2 ">TONER MANAGEMENT SYSTEM.</h1>

                  </a>
                  <!-- /Brand logo-->
                  <!-- Left Text-->
                  <div class="d-none d-lg-flex col-lg-8 align-items-center p-5">
                     <div class="w-100 d-lg-flex align-items-center justify-content-center px-5"><img class="img-fluid " src="~/uploads/man-printing-documents-on-a-printer-5756664-4816436.webp" alt="Login V2" /></div>
                  </div>
                
                  <!-- /Left Text-->
                  <!-- Login-->
                  <div class="d-flex col-lg-4 align-items-center auth-bg px-2 p-lg-5">
                     <div class="col-12 col-sm-8 col-md-6 col-lg-12 px-xl-2 mx-auto">
                        <h2 class="card-title fw-bold mb-1">Welcome to <span class="text-primary">Excel Technologies Ltd.</span></h2>
                        <p class="card-text mb-2">Please sign-in to your account and start the adventure</p>

                        <form asp-action="Login" asp-controller="Account" method="post">
                  <p class="text-center">Please login to your account</p>

                  @if (ViewData["msg"] != null)
                        {
                           <p class="alert alert-danger">@ViewData["msg"]</p>
                        }
                  <div class="form-outline mb-1">
                      <label class="col-form-label" asp-for="Email">Email</label>
                    <input type="email" id="email-icon" asp-for="Email" class="form-control" name="Email" placeholder="Email" required>
                    
                  </div>

                  <div class="form-outline mb-1">
                      <label class="form-label" for="form2Example22">Password</label>
                    <input type="password" id="pass-icon" asp-for="Password" class="form-control" name="Password" placeholder="Password"required/>
                    
                  </div>

                  <div class="text-center pt-1 mb-1 pb-1">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="customCheck2" />
                    <label class="form-check-label" for="customCheck2">Remember me</label>
                    <button class="btn btn-primary btn-block fa-lg gradient-custom-2 " value="Login" type="submit" >Log in</button>                 
                  </div>         
                </form>
                        <p class="text-center mt-2"><span>Don't have an account?</span>
                        <a role="button" asp-controller="Account" asp-action="Register"><span>&nbsp;Create an account</span></a></p>
                        <div class="divider my-2">
                        
                        </div>
                     </div>
                  </div>
                  <!-- /Login-->
               </div>
            </div>
