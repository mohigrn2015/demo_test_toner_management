              <img src="~/app-assets/images/banner/photo_kk.png" alt="" srcset="" style=" display: block; margin-left: auto; margin-right: auto; width: 20%;" />
            </div>
   </div>
   <div class="content-wrapper container-xxl p-0">
      <div class="content-header row">
      </div>
      <div class="content-body">
         <section class="invoice-list-wrapper">
                  <div class="col-md-6 col-lg-10 offset-sm-1 offset-md-3 offset-lg-3 gx-2">
                     <h1>Toner & Machine Setting</h1>
                  </div>
                  <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TConfligID" />
              <div class="row">
                  <div class="col">
                <label class="control-label">Machine Serial</label>
                <select asp-for="MachinID" class="form-control" asp-items="ViewBag.MachinID">
                    <option value="0">Slect Machine Model</option>
                </select>
                <span asp-validation-for="MachinID" class="text-danger"></span>
            </div>
            <div class="col">
                <label class="control-label">Toner Model</label>
                <select asp-for="TonarID" class="form-control" asp-items="ViewBag.TonarID">
                    <option value="0">Select Toner Model</option>
                </select>
                <span asp-validation-for="TonarID" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-1">
                <input type="submit" value="Save" class="btn btn-primary"/>
