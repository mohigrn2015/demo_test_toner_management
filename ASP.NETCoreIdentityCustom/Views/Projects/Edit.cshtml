@model ASP.NETCoreIdentityCustom.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="app-content content ">
   <div class="content-overlay"></div>
   <div class="header-navbar-shadow">
         <div style="display: flex; justify-content: center; align-items: center;">
         <img src="~/app-assets/images/banner/photo_kk.png" alt="" srcset="" style=" display: block; margin-left: auto; margin-right: auto; width: 20%;" />
        </div>
   </div>
   <div class="content-wrapper container-xxl p-0">
      <div class="col-md-6 offset-3 col-6">
        <div class="card">
          <div class="card-header">
           <h4 class="card-title">Project Infromation</h4>
          </div>
          <div class="card-body">
            <form class="form form-vertical" asp-action="Edit">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProjectId" />
              <div class="row">
                 <div class="col-12">
                    <div class="mb-1">                           
                      <label class="form-label" for="first-name-icon">Project Name</label>
                       <div class="input-group input-group-merge">
                          <input asp-for="ProjectName" class="form-control" />
                          <span asp-validation-for="ProjectName" class="text-danger"></span>
                       </div>
                    </div>
                 </div>
                 <div class="col-12">
                    <div class="mb-1">                           
                      <label class="form-label" for="first-name-icon">Location Name</label>
                       <div class="input-group input-group-merge">
                          <input asp-for="Location" class="form-control" />
                          <span asp-validation-for="Location" class="text-danger"></span>
                       </div>
                    </div>
                 </div>
                 <div class="col-12">
                   <div class="mb-1">
                     <label class="form-label" for="email-id-icon">Customer Name</label>
                     <div class="input-group input-group-merge">
                                                       
                       <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                     </div>
                    </div>
                 </div>   
                <div class="col-12">
                  <input type="submit" value="Update" class="btn btn-success" />
                  <a asp-action="Index"class="btn btn-secondary">Back</a>
                </div>
              </div>
            </form>
          </div>
         </div>
      </div>
   </div>
</div>
